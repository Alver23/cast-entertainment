{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build",
    "target": "ES2018",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2018", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@database/*": ["database/*"],
      "@utils/*": ["utils/*"],
      "@mocks/*": ["api/__mocks__/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/**/*-mock.ts"]
}
